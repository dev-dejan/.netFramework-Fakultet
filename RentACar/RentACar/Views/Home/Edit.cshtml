@using RentACar.Extensions
@model EditViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Izmena automobila - @Model.Automobil.Marka (@Model.Automobil.Naziv)</h1>
<hr />
<br />
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="@Model.Automobil.Id" />
    <input type="hidden" asp-for="@Model.Automobil.IsIznajmljeno"/>
    <div class="form-group">
        <label>Marka automobila</label>
        <input type="text" class="form-control" asp-for="@Model.Automobil.Marka" placeholder="Valter brani Sarajevo">
        <span asp-validation-for="Automobil.Marka" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Naziv automobila</label>
        <input type="text" class="form-control" asp-for="@Model.Automobil.Naziv" placeholder="Hajrudin Krvavac">
        <span asp-validation-for="Automobil.Naziv" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Godiste</label>
        <input type="text" class="form-control" asp-for="@Model.Automobil.Godina" placeholder="120">
        <span asp-validation-for="Automobil.Godina" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Cena</label>
        <input type="text" class="form-control" asp-for="@Model.Automobil.Cena" placeholder="3D">
        <span asp-validation-for="Automobil.Cena" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Osiguranje</label>
        <select class="form-control" asp-for="@Model.Automobil.IdOsiguranja" asp-items="@Model.Osiguranjes.ToSelectList()" id="offer-placename">
            <option selected value="">Izaberite osiguranje</option>
        </select>
        <span asp-validation-for="Automobil.IdOsiguranja" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Snimi</button>
</form>