@model RentACar.Models.PayViewModel
@{
    ViewData["Title"] = "Pay";
}

<h1>Placanje racuna za - @Model.Automobil.Marka @Model.Automobil.Naziv</h1>
<hr />
<br />
<form asp-action="Pay" method="post">
    <input type="hidden" asp-for="@Model.Automobil.Id" />
    <input type="hidden" asp-for="@Model.IznajmljeniAutomobil.IdIznajmljenogAutomobila" />
    <div class="form-group">
        <label>Cena za uplatu</label>
        <input type="text" asp-for="@Model.UkupnaCena" class="form-control" disabled>
    </div>
    <div class="form-group">
        <label>Ime</label>
        <input type="text" class="form-control">
    </div>
    <div class="form-group">
        <label>Prezime</label>
        <input type="text" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Plati</button>
</form>